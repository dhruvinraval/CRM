@using RX108_Data
@model PagingList<country>
@{
    ViewData["Title"] = "Country List";
    int? currentSort = ViewBag.CurrentSort == null ? 11 : ViewBag.CurrentSort;
    if (currentSort == null)
    {
        currentSort = 11;
    }

}
