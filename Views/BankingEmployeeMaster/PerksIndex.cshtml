@using System.Data
@using RX108_Data
@model Perks
@{
    ViewData["Title"] = "Perks";
}
<div class="@ViewBag.Class">
    @ViewBag.Msg
</div>

<style>

    .error {
        color: red;
    }
</style>

<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
        <a class="navbar-brand" href="#">Add New Perks</a>
    </div>
    <div class="form-inline my-2 my-lg-0 float-right">
        <a href="../BankingEmployeeMaster/PerksList" class="btn btn-outline-info pull-right">Back To List</a>
    </div>
</nav>
<br />

@using (Html.BeginForm("PerksIndex", "BankingEmployeeMaster", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.HiddenFor(m => m.SrNo)

                    <label class="control-label col-sm-4">Perks Type:</label>

                    @Html.DropDownListFor(m => m.PerksType, new SelectList(new List<Object> { new { value = 1, text = "Allowance" }, new { value = 2, text = "Deduction" } }, "value", "text"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PerksType, "", new { @class = "error" })

                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Allow Type:</label>

                    @Html.DropDownListFor(m => m.AllowType, new SelectList(new List<Object> { new { value = 1, text = "Daily" }, new { value = 2, text = "Monthly" } }, "value", "text"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.AllowType, "", new { @class = "error" })

                </div>
                <div class="form-group">
                    <label class="control-label col-sm-5">Display Seq:</label>

                    @Html.TextBoxFor(m => m.DisplaySeq, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.DisplaySeq, "", new { @class = "error" })

                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Perk Name:</label>

                    @Html.TextBoxFor(m => m.PerkName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PerkName, "", new { @class = "error" })

                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label col-sm-4">Min Perk:</label>

                    @Html.TextBoxFor(m => m.MinPerk, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.MinPerk, "", new { @class = "error" })

                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Perk Per:</label>

                    @Html.TextBoxFor(m => m.PerkPer, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PerkPer, "", new { @class = "error" })

                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">Fix Per:</label>

                    @Html.TextBoxFor(m => m.FixPer, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FixPer, "", new { @class = "error" })

                </div>
                <div class="form-group">
                    <label class="control-label col-sm-5">Calculated On:</label>

                    @Html.DropDownListFor(m => m.CalculatedOn, new SelectList(new List<Object> { new { value = 1, text = "NR" }, new { value = 2, text = "Basic" }, new { value = 3, text = "Gross Salary" }, new { value = 4, text = "Days" } }, "value", "text"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.CalculatedOn, "", new { @class = "error" })

                </div>

            </div>

        </div>
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4">
                <div class="form-group">
                    <input type="submit" name="submit" value="Save" class="btn btn-success btn-block" />
                </div>
            </div>
            <div class="col-md-4"></div>
        </div>
    </div>
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

